{% extends 'base.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block content %}
    <div class="row">
        <form class="form bg-primary col-6 offset-3 rounded" method="post" id="form-student">
            <label class="form-label" for="username">Nom d'utilisateur</label>
            <input class="form-control" type="text" id="username" name="username" value="{{ username }}" required>
            <label class="form-label" for="password">Mot de passe</label>
            <input class="form-control" type="password" id="password" name="password" required>
            <input class="form-control my-3" type="submit" value="Connexion">
            {% if redirect is defined %}
                <input type="hidden" name="redirect" value="{{ redirect }}">
            {% endif %}
        </form>
    </div>
{% endblock %}