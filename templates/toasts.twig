<div class="toast align-items-center text-bg-{{ color }} border-0 position-absolute top-0 end-0 rounded-3 m-3" role="alert" aria-live="assertive" aria-atomic="true" data-bs-autohide="false">
        <div class="d-flex">
            <div class="toast-body">{{ message|raw }}</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', (event) => { // to wait for bs library to load
            const toastElList = document.querySelectorAll('.toast')
            const toastList = [...toastElList].map(toastEl => new bootstrap.Toast(toastEl))
            toastList.forEach(toast => {
                toast.show();
                setTimeout(() => {
                    toast.hide();
                }, 2000);
            });
        });
    </script>