{% extends "base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <form class="form">
        <h2>Inscription</h2>
        {% if prof is defined %}
            <label for="eleve" class="form-label">El√®ve</label>
            <select name="eleve" id="eleve" class="form-select">
