{% extends 'base.html.twig' %}

{% block title %}Visualisation d'un stage{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <h5 class="card-title">Stage de {{ stage.getStagiaire().getPrenom() }} {{ stage.getStagiaire().getNom() }}</h5>
        </div>
        <div class="card-body">
            <p>Type du stage : {{ stage.getType()|capitalize }}</p>
            <p>Date de début : {{ stage.getDebut()|date('d/m/Y') }}</p>
            <p>Date de fin : {{ stage.getFin()|date('d/m/Y') }}</p>
            <p>Description : {{ stage.getDescription() }}</p>
            {% if stage.getObservation() %}
                <p>Observation : {{ stage.getObservation() }}</p>
            {% endif %}
            <p>Entreprise : <a href="index.php?page=voirEntreprise&id={{ stage.getEntreprise().getNumero() }}">{{ stage.getEntreprise().getRaisonSociale() }}</p></a>
            <p>Professeur référent : {{ stage.getProfesseur().getPrenom() }} {{ stage.getProfesseur().getNom() }}</p>
        </div>
        <div class="card-footer">
            <a href="index.php?page=stages" class="btn btn-primary">Retour à la liste</a>
        </div>
    </div>
{% endblock %}