{% extends "base.html.twig" %}

{% block title %}
    Stagiaires
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-center">Stagiaires</h1>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <a href="#" class="btn btn-primary w-100">Rechercher un stagiaire</a>
            </div>
            <div class="col-md-6">
                <a href="index.php?page=ajouterStagiaire" class="btn btn-primary w-100">Ajouter un stagiaire</a>
            </div>
        </div>
        <table class="table table-hover table-striped-columns table-bordered">
            <thead>
                {% set columns = ["Opération", "Étudiant", "Entreprise", "Professeur"] %}
                <tr>
                    {% for column in columns %}
                        <th>{{ column }}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
                {% for stage in stages %}
                    <tr>
                        <td class="text-center">
                            <a href="index.php?page=voirStagiaire&id={{ stage.getStagiaire().getNumero() }}"><i class="fa-solid fa-eye fa-2xl"></i></a>
                            <a href="index.php?page=stagiaires&id={{ stage.getStagiaire().getNumero() }}"><i class="fa-solid fa-pen fa-2xl"></i></a>
                            <a href="index.php?page=stagiaires&id={{ stage.getStagiaire().getNumero() }}"><i class="fa-solid fa-trash fa-2xl"></i></a>
                        </td>
                        <td>
                            {{ stage.getStagiaire().getPrenom() ~ " " ~ stage.getStagiaire().getNom() }}
                        </td>
                        <td>
                            {{ stage.getEntreprise().getRaisonSociale() }}
                        </td>
                        <td>
                            {% set prof = stage.getProfesseur() %}
                            {{ prof.getPrenom() ~ " " ~ prof.getNom() }}
                        </td>
                    </tr>
                {% endfor %}

				{% for etudiant in etudiants_non_stagiaires %}
                    <tr>
                        <td class="text-center">
                            <a href="index.php?page=voirStagiaire&id={{ etudiant.getNumero() }}"><i class="fa-solid fa-eye fa-2xl"></i></a>
                            <a href="index.php?page=stagiaires&id={{ etudiant.getNumero() }}"><i class="fa-solid fa-pen fa-2xl"></i></a>
                            <a href="index.php?page=stagiaires&id={{ etudiant.getNumero() }}"><i class="fa-solid fa-trash fa-2xl"></i></a>
                        </td>
                        <td>
                            {{ etudiant.getPrenom() ~ " " ~ etudiant.getNom() }}
                        </td>
                        <td>
                            
                        </td>
                        <td>
                            
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
            
    </div>

    {% if delete is defined %}
        {% set message = delete == 'success' ? 'L\'étudiant a bien été supprimé.' : 'Erreur pendant la suppression. Veuillez réessayer' %}
        {% include 'toasts.twig' with {'message': message, 'color': delete == 'success' ? 'success' : 'danger'} only %}
    {% endif %}
{% endblock %}